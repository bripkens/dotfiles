#!/usr/bin/env bash

# Let stuff installed via brew be before the system stuff
export PATH="/usr/local/bin:$PATH:$GOPATH/bin"

# Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# google cloud tools
export PATH="$PATH:/Applications/google-cloud-sdk/bin"

# jmeter
export PATH="$PATH:/Users/ben/Applications/apache-jmeter-4.0/bin"

# terraform
export PATH="/usr/local/opt/terraform@0.12/bin:$PATH"

# SBT JVM-Options
export SBT_OPTS="-XX:+UseConcMarkSweepGC -XX:+CMSClassUnloadingEnabled -XX:PermSize=256M -XX:MaxPermSize=512M"

export GOPATH="$HOME/go"

# Default Editor
export EDITOR=vim

# Maven configuration
export M2_REPO="$HOME/.m2/repository"

export SCALA_HOME="/usr/local/opt/scala/idea"

# node and io.js
export NVM_DIR="$HOME/.nvm"
export NODE_REPL_HISTORY_FILE="$HOME/.node-repl-history"

# GPG support
# see https://help.github.com/articles/telling-git-about-your-gpg-key/
export GPG_TTY=$(tty)

export LANG="en_US.UTF-8"

# Use the latest openssl version
export PATH="/usr/local/opt/openssl@1.1/bin:$PATH"

export JAVA_HOME="/Users/ben/java/zulu11.43.55-ca-jdk11.0.9.1-macosx_x64/"

